.Topbar {
  display: flex;
  margin-bottom: 3rem;
  width: 100%;
  height: 6rem;
  flex-direction: row;
  align-items: center;
  background-color: var(--topbar);

   h1 {
    margin: 0 0 0 2.25rem;
    color: var(--white);
  }

  .home {
    color: var(--white);
    text-decoration: none;
  }

  .home:hover {
    opacity: 0.75;
  }
}
